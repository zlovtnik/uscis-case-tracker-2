<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Environment variable for uscis.grpc log level (default: INFO) -->
    <variable name="USCIS_GRPC_LOG_LEVEL" value="${USCIS_GRPC_LOG_LEVEL:-INFO}"/>
    
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- USCIS gRPC Server logging -->
    <logger name="uscis" level="INFO"/>
    <!-- Configurable via USCIS_GRPC_LOG_LEVEL env var. Set to DEBUG for development. -->
    <logger name="uscis.grpc" level="${USCIS_GRPC_LOG_LEVEL}"/>
    <logger name="uscis.server" level="INFO"/>
    
    <!-- gRPC logging -->
    <logger name="io.grpc" level="WARN"/>
    <logger name="io.grpc.netty" level="WARN"/>
    
    <!-- Suppress noisy library logs -->
    <logger name="play" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
